@model AppMvcLoginReg.Models.Alumno
@{
    ViewData["Title"] = "Editar Alumno";
}


<h4>Editar Alumno</h4>
<div>
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdAlumno" />
        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" />
            <span asp-validation-for="Nombre"></span>
        </div>
        <div class="form-group">
            <label asp-for="Apellido"></label>
            <input asp-for="Apellido" />
            <span asp-validation-for="Apellido"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label class="control-label"></label>
            <select name="IdCurso" class="form-control" asp-items="ViewBag.ListadoCursos"></select>
        </div>
        <div class="form-group">
            <label asp-for="Nota1"></label>
            <input asp-for="Nota1" />
            <span asp-validation-for="Nota1"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nota2"></label>
            <input asp-for="Nota2" />
            <span asp-validation-for="Nota2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Inasistencias"></label>
            <input asp-for="Inasistencias" />
            <span asp-validation-for="Inasistencias"></span>
        </div>
        <div class="form-group">
            <label asp-for="Seguimiento"></label>
            <input asp-for="Seguimiento" />
            <span asp-validation-for="Seguimiento"></span>
        </div>
        <div>
            <input type="submit" value="Guardar Cambios" />
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Volver Atras</a>
</div>