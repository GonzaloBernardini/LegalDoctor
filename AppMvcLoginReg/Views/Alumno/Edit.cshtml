@model AppMvcLoginReg.Models.Alumno
@{
    ViewData["Title"] = "Editar Alumno";
}


<h4>Editar Alumno</h4>
<hr />
<div class="row">
<div>
    <form class="col s12" asp-action="Edit">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix ">account_circle</i>
                <input asp-for="Nombre" type="text" class="validate">
                <label asp-for="Nombre"></label>
                <span asp-validation-for="Nombre"></span>
            </div>
            <div class="input-field col s6">
                <i class="material-icons prefix">mode_edit</i>
                <input asp-for="Apellido" type="text" class="validate">
                <label asp-for="Apellido"></label>
                <span asp-validation-for="Apellido"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix">email</i>
                <input asp-for="Email" type="text" class="validate">
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix"></i>
                <input asp-for="Nota1" type="text" class="validate">
                <label asp-for="Nota1">Nota1</label>
                <span asp-validation-for="Nota1"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix"></i>
                <input asp-for="Nota2" type="text" class="validate">
                <label asp-for="Nota2"></label>
                <span asp-validation-for="Nota2"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix"></i>
                <input asp-for="PromedioFinal" type="text" class="validate">
                <label asp-for="PromedioFinal"></label>
                <span asp-validation-for="PromedioFinal"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix"></i>
                <input asp-for="Inasistencias" type="text" class="validate">
                <label asp-for="Inasistencias"></label>
                <span asp-validation-for="Inasistencias"></span>
            </div>
            <div class="input-field col s12">
                <i class="material-icons prefix"></i>
                <input asp-for="Seguimiento" type="text" class="validate">
                <label asp-for="Seguimiento"></label>
                <span asp-validation-for="Seguimiento"></span>
            </div>      
        </div>
        <div>
            <input asp-for="IdAlumno" type="hidden" />
            <label asp-for="IdAlumno"></label>
            <span asp-validation-for="IdAlumno"></span>
        </div>
        <div class="input-field col s12">
            <i class="small material-icons prefix">school</i>
            <select name="IdCurso" asp-items="ViewBag.ListadoCursos"></select>
        </div>
        <div class="row">
            <div class="col s6 m6">
                <input class="btn waves-effect waves-light cyan accent-4"  type="submit" name="action">
                    Guardar
                    
                <input>
            </div>
            <div class="col s6 m6">
                <a asp-action="Index" class="waves-effect waves-light btn grey darken-4">Volver atras<i class="material-icons left">undo</i></a>
            </div>
        </div>
    </form>
</div>
</div>