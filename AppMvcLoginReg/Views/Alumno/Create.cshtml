@model AppMvcLoginReg.Models.Alumno

@{
    ViewData["Title"] = "Crear Alumno";
}



<h4>Nuevo Alumno</h4>
<hr />
<div class="row">
    <div >
        <form class="col s12" asp-action="Create">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <div class="input-field col s6">
                    <i class="material-icons prefix ">account_circle</i>
                    <input asp-for="Nombre" type="text" class="validate">
                    <label asp-for="Nombre"></label>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="input-field col s6">
                    <i class="material-icons prefix">mode_edit</i>
                    <input asp-for="Apellido" type="text" class="validate">
                    <label asp-for="Apellido"></label>
                    <span asp-validation-for="Apellido"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix">email</i>
                    <input asp-for="Email" type="text" class="validate">
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix"></i>
                    <input asp-for="Seguimiento" type="text" class="validate">
                    <label asp-for="Seguimiento">Comentario Seguimiento</label>
                    <span asp-validation-for="Seguimiento"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix"></i>
                    <input id="nota1" asp-for="Nota1" type="number" class="validate">
                    <label asp-for="Nota1">Nota 1</label>
                    <span asp-validation-for="Nota1"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix"></i>
                    <input  id="nota2" asp-for="Nota2" type="number" class="validate">
                    <label asp-for="Nota2">Nota 2</label>
                    <span asp-validation-for="Nota2"></span>
                </div>
                <div class="input-field col s12">
                    <i class="material-icons prefix"></i>
                    <input id="nota3" asp-for="PromedioFinal" type="number" class="validate">
                    <label asp-for="PromedioFinal">Promedio final</label>
                    <span asp-validation-for="PromedioFinal"></span>
                </div>
            </div>                                    
            <div class="input-field col s12">
                <i class="small material-icons prefix">school</i>
                <select name="IdCurso"  asp-items="ViewBag.ListadoCursos"></select>
            </div>
            <div class="row">
                <div class="col s6 m6">
                    <button class="btn waves-effect waves-light cyan accent-4" type="submit" name="action">Guardar
                    <i class="material-icons right ">send</i>
                    </button>
                </div>
                <div class="col s6 m6">
                    <a asp-action="Index"  class="waves-effect waves-light btn grey darken-4">Volver atras<i class="material-icons left" >undo</i></a>
                </div>
                </div>
        </form>
    </div>
</div>
