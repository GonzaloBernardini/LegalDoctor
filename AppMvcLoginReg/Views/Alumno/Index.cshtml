@model IEnumerable<AppMvcLoginReg.Models.Alumno>
@{
    ViewData["Title"] = "Alumnos";
}


<p>
    <a class="btn-floating btn-large green darken-1" asp-action="Create"><i class="material-icons">person_add</i></a>
</p>

<table class="responsive-table highlight z-depth-3 blue lighten-5">
    <thead class="blue darken-1 white-text">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Seguimiento)</th>
            <th>@Html.DisplayNameFor(model => model.Nota1)</th>
            <th>@Html.DisplayNameFor(model => model.Nota2)</th>
            <th>@Html.DisplayNameFor(model => model.PromedioFinal)</th>
            <th>@Html.DisplayNameFor(model => model.Inasistencias)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @*Aca uso codigo para mostrar los registros de mi base de datos *@
        @foreach (var item in Model)
        {
            if (Model.Count() ==0)
            {
                <h1>No hay Alumnos Disponibles</h1>
            }

    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Seguimiento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nota2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PromedioFinal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Inasistencias)
        </td>

        <td>
            @*<a asp-action="Edit" asp-route-id="@item.IdAlumno"><i class="material-icons">edit</i></a>*@
            <a asp-action="Delete" asp-controller="Alumno" asp-route-id="@item.IdAlumno"><i class="material-icons red-text">delete</i></a>
            @*<a asp-action="Details" asp-controller="Alumno" asp-route-id="@item.IdAlumno"><i class="material-icons grey-text">more_vert</i></a>*@
        </td>
    </tr>
        }

    </tbody>
</table>











