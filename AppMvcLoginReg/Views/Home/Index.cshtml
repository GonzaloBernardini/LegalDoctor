@{
    ViewData["Title"] = "Home Page";
}
<br />
<br />
<br />

<div class="row">
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image center blue lighten-2">
                <i class="material-icons large">people</i>

                <a class="btn-floating halfway-fab waves-effect waves-light red pulse" asp-controller="Alumno" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title center">Alumnos</span>
                <p>En esta Seccion puede administrar y seleccionar a sus alumnos </p>
            </div>
            <div class="card-action grey darken-4">
                <a asp-controller="Alumno" asp-action="Index">Ver mas</a>
            </div>
        </div>
    </div>
    <div class="col s12 m6">
        <div class="card">
            <div class="card-image center orange lighten-2">
                <i class="material-icons large">school</i>

                <a class="btn-floating halfway-fab waves-effect waves-light red pulse" asp-controller="Curso" asp-action="Create"><i class="material-icons">add</i></a>
            </div>
            <div class="card-content">
                <span class="card-title center">Cursos</span>
                <p>En esta Seccion puede administrar y seleccionar  sus Cursos </p>
            </div>
            <div class="card-action grey darken-4">
                <a asp-controller="Curso" asp-action="Index">Ver mas</a>
            </div>
        </div>
    </div>
</div>