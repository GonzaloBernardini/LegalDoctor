@model IEnumerable<AppMvcLoginReg.Models.Alumno>
@{
    ViewData["Title"] = "Alumnos";
}


<p>
    <a asp-action="Create">Nuevo Alumno</a>
</p>

<table>
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
        </tr>
    </thead>
    <tbody>
        @*Aca uso codigo para mostrar los registros de mi base de datos *@
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CursoAsignado)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAlumno">Editar</a>
            </td>
            <td>
                <a asp-action="Delete" asp-controller="Alumno" asp-route-id="@item.IdAlumno">Borrar</a>
            </td>
            <td>
                <a asp-action="Details" asp-controller="Alumno" asp-route-id="@item.IdAlumno">Detalle</a>
            </td>
        </tr>
        }

    </tbody>
</table>











